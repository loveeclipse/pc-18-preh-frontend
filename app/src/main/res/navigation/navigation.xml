<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/navigation" app:startDestination="@id/home">

    <fragment android:id="@+id/home" android:name="it.unibo.preh_frontend.home.HomeFragment"
              android:layout="@layout/fragment_home"
              android:label="@string/app_name">
        <action android:id="@+id/action_home_to_settings" app:destination="@id/settings"
                app:enterAnim="@anim/nav_default_enter_anim" app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim" app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
        <action android:id="@+id/action_home_to_about" app:destination="@id/about"
                app:enterAnim="@anim/nav_default_enter_anim" app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim" app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment android:id="@+id/settings"
              android:name="it.unibo.preh_frontend.settings.SettingsFragment"
              android:layout="@layout/fragment_settings"
              android:label="@string/settings"/>
    <fragment android:id="@+id/about"
              android:name="it.unibo.preh_frontend.about.AboutFragment"
              android:layout="@layout/fragment_about"
              android:label="@string/about"/>
</navigation>