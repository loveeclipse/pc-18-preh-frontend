<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="materialButtonStyle">@style/AppButtonStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>

    <!-- Tab Layout -->
    <style name="TabText" parent="TextAppearance.MaterialComponents.Tab">
        <item name="android:textSize">@dimen/normalSize</item>
    </style>

    <!-- ActionBar -->
    <style name="ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/hugeSize</item>
        <item name="android:textColor">@color/toolbarTextColor</item>
    </style>
    <style name="ToolbarSubtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/normalSize</item>
        <item name="android:textColor">@color/toolbarTextColor</item>
    </style>

    <!-- Button -->
    <style name="AppButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/normalSize</item>
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="AccentButtonStyle" parent="AppButtonStyle">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="InfusionButtonStyle" parent="AppButtonStyle">
        <item name="backgroundTint">@color/infusionColor</item>
    </style>
    <style name="EmoButtonStyle" parent="AppButtonStyle">
        <item name="backgroundTint">@color/emoColor</item>
    </style>
    <style name="GenericDrugsButtonStyle1" parent="AppButtonStyle">
        <item name="backgroundTint">@color/drugColor1</item>
    </style>
    <style name="GenericDrugsButtonStyle2" parent="AppButtonStyle">
        <item name="backgroundTint">@color/drugColor2</item>
    </style>
    <style name="SelectableButtonStyle" parent="AppButtonStyle">
        <item name="cornerRadius">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/buttonSelectedBackgroundColor</item>
        <item name="android:textColor">@color/buttonSelectedBackgroundColor</item>
        <item name="backgroundTint">@color/buttonUnselectedBackgroundColor</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <!-- TextView style -->
    <style name="TextViewStyle" parent="android:style/Widget.Material.TextView">
        <item name="android:textAppearance">@style/NormalTextStyle</item>
    </style>

    <!-- Text style -->
    <style name="BigTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/bigSize</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NormalTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/normalSize</item>
    </style>

    <!-- Dialog title -->
    <style name="DialogTitleTextStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/hugeSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text of treatment fragment -->
    <style name="TreatmentTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/normalSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Constraint Layout -->
    <style name="BoxStyle">
        <item name="android:background">@drawable/box</item>
    </style>
    <style name="BackgroundFragmentStyle">
        <item name="android:background">@color/backgroundFragmentColor</item>
    </style>

    <!-- Switch -->
    <style name="AppSwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/switchColor</item>
    </style>

</resources>
