<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="textAppearanceButton">@style/AppButtonStyle</item>
        <item name="textAppearanceBody1">@style/MyBody1</item>
        <item name="emoColor">@color/emoColor</item>
    </style>

    <style name="AppTheme2" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="emoColor">@color/emoColor</item>
    </style>

    <style name="TabText" parent="TextAppearance.MaterialComponents.Tab">
        <item name="android:textSize">@dimen/normalSize</item>
    </style>
    <style name="ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/hugeSize</item>
        <item name="android:textColor">@color/toolbarTextColor</item>
    </style>
    <style name="ToolbarSubtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/normalSize</item>
        <item name="android:textColor">@color/toolbarTextColor</item>
    </style>
    <style name="AppBottomSheetDialogTheme"
           parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
           parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="behavior_peekHeight">900dp</item>
    </style>

    <style name="AppButtonStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">@dimen/normalSize</item>
    </style>

    <style name="MyBody1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/normalSize</item>
    </style>

</resources>
