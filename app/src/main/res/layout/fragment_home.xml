<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".home.HomeFragment" android:id="@+id/frameLayout5">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:text="@string/note"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:id="@+id/note_button" android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="25dp" app:layout_constraintTop_toBottomOf="@+id/storico_button"/>
        <Button
                android:text="@string/new_pc_car"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:id="@+id/pcCar_button" android:layout_marginTop="15dp"
                app:layout_constraintStart_toEndOf="@+id/param_vitali_button" android:layout_marginStart="25dp"
                app:layout_constraintEnd_toStartOf="@+id/note_button" android:layout_marginEnd="25dp"
                app:layout_constraintTop_toBottomOf="@+id/dett_missione_button"/>
        <Button
                android:text="@string/parametri_vitali"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:id="@+id/param_vitali_button" android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="25dp"
                app:layout_constraintTop_toBottomOf="@+id/stato_paziente_button"/>
        <Button
                android:text="@string/storico"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:id="@+id/storico_button"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="25dp" android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="@string/dett_missione"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:id="@+id/dett_missione_button"
                app:layout_constraintStart_toEndOf="@+id/stato_paziente_button" android:layout_marginStart="25dp"
                app:layout_constraintEnd_toStartOf="@+id/storico_button" android:layout_marginEnd="25dp"
                android:layout_marginTop="15dp" app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="@string/stato_paziente"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:id="@+id/stato_paziente_button"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="25dp"
                android:layout_marginTop="15dp" app:layout_constraintTop_toTopOf="parent"/>
        <com.google.android.material.tabs.TabLayout
                android:layout_width="587dp"
                android:layout_height="72dp"
                app:tabTextAppearance="@style/TabText"
                android:id="@+id/home_tabs" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/pcCar_button" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.538">

            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/farmaci"/>

            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/manovre"/>

            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trattamenti"/>
            <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/complicanze_in_itinere"/>
        </com.google.android.material.tabs.TabLayout>
        <FrameLayout
                android:layout_width="584dp"
                android:layout_height="720dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:id="@+id/tabFrame" android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@+id/home_tabs" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginBottom="12dp" app:layout_constraintBottom_toBottomOf="parent">

        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>