<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Spinner
                android:layout_width="100dp"
                android:layout_height="30dp"

                android:id="@+id/requenzaresp_spinner2"
                tools:layout_editor_absoluteY="150dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
        />
        <TextView
                android:text="@string/parametri_vitali"
                android:textSize="@dimen/hugeSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textView15"
                app:layout_constraintEnd_toStartOf="@+id/guideline59"
                app:layout_constraintStart_toEndOf="@+id/guideline58"
                android:layout_marginStart="50dp" android:layout_marginEnd="50dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="38dp"/>
        <ImageButton
                android:layout_width="105dp"
                android:layout_height="45dp" app:srcCompat="@android:drawable/ic_delete"
                android:id="@+id/closeAndSave_button"
                android:backgroundTint="@color/common_google_signin_btn_tint"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="25dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline59"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline60"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_percent="0.25"
                android:id="@+id/guideline58"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_percent="0.75"
                android:id="@+id/guideline59"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_percent="0.1"
                android:id="@+id/guideline60"/>
        <TextView
                android:text="@string/vie_aeree"
                android:textSize="@dimen/normalSize"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:id="@+id/textView29"
                app:layout_constraintEnd_toStartOf="@+id/button"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline60"/>
        <Button
                android:text="@string/pervie"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normalSize"
                android:id="@+id/button"
                app:layout_constraintStart_toEndOf="@id/guideline43"
                app:layout_constraintEnd_toStartOf="@+id/button3" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline60"/>
        <Button
                android:text="@string/non_pervie"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normalSize"
                android:backgroundTint="@color/colorPrimaryDark"
                android:id="@+id/button3"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="72dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline60"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>