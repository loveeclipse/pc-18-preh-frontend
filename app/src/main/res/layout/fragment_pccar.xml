<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   app:layout_behavior="pee"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="@string/new_pc_car_text"
            android:layout_width="149dp"
            android:textSize="27sp"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp" app:layout_constraintEnd_toStartOf="@+id/closeAndSave_button"
            android:layout_marginEnd="60dp"/>
    <Button
            android:text="@string/partenza_dell_equipaggio"
            android:layout_width="240dp"
            android:layout_height="70dp"
            android:id="@+id/partenzaEquip_button" android:layout_marginTop="65dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="181dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="180dp"/>
    <Button
            android:text="@string/arrivo_sul_luogo_dell_incidente"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:id="@+id/arrivoLuogo_button" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/partenzaEquip_button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="180dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="181dp"/>
    <Button
            android:text="@string/partenza_dal_luogo_dell_incidente"
            android:layout_width="240dp"
            android:layout_height="70dp"
            android:id="@+id/partenzaLuogo_button" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="180dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/arrivoLuogo_button"/>
    <Button
            android:text="@string/atterraggio_in_eliporto"
            android:layout_width="240dp"
            android:layout_height="70dp"
            android:id="@+id/atterraggio_button" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="180dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/partenzaLuogo_button"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="181dp"/>
    <ImageButton
            android:layout_width="105dp"
            android:layout_height="81dp" app:srcCompat="@android:drawable/ic_delete"
            android:id="@+id/closeAndSave_button"
            android:backgroundTint="@color/common_google_signin_btn_tint" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="60dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>