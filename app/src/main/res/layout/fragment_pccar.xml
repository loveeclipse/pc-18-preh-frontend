<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/pc_car"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="@string/new_pc_car_text"
            android:layout_width="149dp"
            android:textSize="27sp"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline52" android:layout_marginEnd="77dp"
            app:layout_constraintStart_toEndOf="@+id/guideline42" android:layout_marginStart="74dp"/>
    <Button
            android:text="@string/partenza_dell_equipaggio"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/partenzaEquip_button"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="@+id/guideline53" app:layout_constraintStart_toStartOf="@+id/guideline42"
            android:layout_marginStart="15dp" android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline54" app:layout_constraintEnd_toStartOf="@+id/guideline52"
            android:layout_marginEnd="15dp"/>
    <Button
            android:text="@string/arrivo_sul_luogo_dell_incidente"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/arrivoLuogo_button"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="@+id/guideline54" app:layout_constraintStart_toStartOf="@+id/guideline42"
            android:layout_marginStart="15dp" android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline55" app:layout_constraintEnd_toStartOf="@+id/guideline52"
            android:layout_marginEnd="15dp"/>
    <Button
            android:text="@string/partenza_dal_luogo_dell_incidente"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/partenzaLuogo_button"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="@+id/guideline55" app:layout_constraintStart_toStartOf="@+id/guideline42"
            android:layout_marginStart="15dp" android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline56" app:layout_constraintEnd_toStartOf="@+id/guideline52"
            android:layout_marginEnd="15dp"/>
    <Button
            android:text="@string/atterraggio_in_eliporto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/atterraggio_button"
            android:layout_marginBottom="30dp" app:layout_constraintBottom_toTopOf="@+id/guideline57"
            android:layout_marginTop="30dp" app:layout_constraintTop_toTopOf="@+id/guideline56"
            app:layout_constraintStart_toStartOf="@+id/guideline42" android:layout_marginStart="15dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline52" android:layout_marginEnd="15dp"/>
    <ImageButton
            android:layout_width="105dp"
            android:layout_height="106dp" app:srcCompat="@android:drawable/ic_delete"
            android:id="@+id/closeAndSave_button"
            android:backgroundTint="@color/common_google_signin_btn_tint"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintStart_toEndOf="@+id/guideline52" android:layout_marginStart="20dp"
            android:layout_marginBottom="95dp" app:layout_constraintBottom_toTopOf="@+id/guideline53"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_percent="0.25"
            android:id="@+id/guideline42"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_percent="0.75"
            android:id="@+id/guideline52"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_percent="0.20"
            android:id="@+id/guideline53"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_percent="0.35"
            android:id="@+id/guideline54"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_percent="0.50"
            android:id="@+id/guideline55"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_percent="0.65"
            android:id="@+id/guideline56"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_percent="0.80"
            android:id="@+id/guideline57"/>
</androidx.constraintlayout.widget.ConstraintLayout>