<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root"
        tools:context="it.unibo.preh_frontend.MainActivity">

    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vehicleSpinner"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toStartOf="@+id/guideline13"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/medicSpinner"
            app:layout_constraintTop_toTopOf="@+id/textView4"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintEnd_toStartOf="@+id/guideline13"/>
    <Button
            android:text="@string/conferma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/buttonVerticalPadding"
            android:paddingHorizontal="@dimen/buttonHorizontalPadding"
            android:id="@+id/confirmButton"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline9"/>
    <TextView
            android:text="@string/mezzo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textAppearance="@style/BigTextStyle"
            app:layout_constraintTop_toBottomOf="@+id/guideline11"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintStart_toEndOf="@+id/guideline12"/>
    <TextView
            android:text="@string/medico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textAppearance="@style/BigTextStyle"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintBottom_toTopOf="@+id/guideline9"
            app:layout_constraintStart_toEndOf="@+id/guideline12"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline9"
            app:layout_constraintGuide_percent="0.5"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline11"
            app:layout_constraintGuide_percent="0.3"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline12"
            app:layout_constraintGuide_percent="0.2"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline13"
            app:layout_constraintGuide_percent="0.8"/>
    <ProgressBar
            style="@android:style/Widget.Material.ProgressBar.Large"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:indeterminate="true"
            android:id="@+id/mission_search_progressbar"
            android:layout_marginStart="60dp"
            android:progressDrawable="@drawable/circular_progress_bar"
            app:layout_constraintStart_toEndOf="@+id/guideline12"
            app:layout_constraintEnd_toStartOf="@+id/guideline13"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/confirmButton"
            android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toTopOf="@+id/mission_search_textview"
            android:visibility="gone"/>
    <TextView
            android:text="@string/ricerca_missione_in_corso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mission_search_textview"
            android:gravity="center"
            android:textAppearance="@style/BigTextStyle"
            app:layout_constraintEnd_toStartOf="@+id/guideline13"
            android:layout_marginEnd="70dp"
            app:layout_constraintStart_toEndOf="@+id/guideline12"
            android:layout_marginStart="70dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginBottom="53dp"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>