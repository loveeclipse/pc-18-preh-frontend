<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   style="@style/BackgroundFragmentStyle"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".dialog.PhysiologicCriterionDialog">

    <TextView
            android:text="@string/criterio_anatomico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DialogTitleTextStyle"
            android:id="@+id/textView32"
            android:layout_marginTop="@dimen/verticalMargin"
            android:layout_marginBottom="@dimen/verticalMargin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/anatomic_image_button"
            android:src="@drawable/ic_close_24dp"
            android:backgroundTint="@color/common_google_signin_btn_tint"
            android:layout_marginTop="@dimen/verticalMargin"
            android:layout_marginEnd="@dimen/horizontalMargin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/textView32"
            app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Switch
                    android:text="@string/trauma_schiacciamento_tronco"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/torso_trauma_switch"
                    android:theme="@style/AppSwitchStyle"
                    android:textAppearance="@style/NormalTextStyle"
                    android:layout_marginStart="@dimen/horizontalMargin"
                    android:layout_marginEnd="@dimen/horizontalMargin"
                    android:layout_marginTop="@dimen/criterionVerticalSpace"
                    android:layout_marginBottom="@dimen/criterionVerticalSpace"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/piercing_wound_switch"/>
            <Switch
                    android:text="@string/ferita_penetrante"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/piercing_wound_switch"
                    android:theme="@style/AppSwitchStyle"
                    android:textAppearance="@style/NormalTextStyle"
                    android:layout_marginStart="@dimen/horizontalMargin"
                    android:layout_marginEnd="@dimen/horizontalMargin"
                    android:layout_marginTop="@dimen/criterionVerticalSpace"
                    android:layout_marginBottom="@dimen/criterionVerticalSpace"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/torso_trauma_switch"
                    app:layout_constraintBottom_toTopOf="@id/skull_fracture_switch"/>
            <Switch
                    android:text="@string/frattura_cranica_io"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/skull_fracture_switch"
                    android:theme="@style/AppSwitchStyle"
                    android:textAppearance="@style/NormalTextStyle"
                    android:layout_marginStart="@dimen/horizontalMargin"
                    android:layout_marginEnd="@dimen/horizontalMargin"
                    android:layout_marginTop="@dimen/criterionVerticalSpace"
                    android:layout_marginBottom="@dimen/criterionVerticalSpace"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/piercing_wound_switch"
                    app:layout_constraintBottom_toTopOf="@id/costal_volet_switch"/>
            <Switch
                    android:text="@string/volet_costale_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/costal_volet_switch"
                    android:theme="@style/AppSwitchStyle"
                    android:textAppearance="@style/NormalTextStyle"
                    android:layout_marginStart="@dimen/horizontalMargin"
                    android:layout_marginEnd="@dimen/horizontalMargin"
                    android:layout_marginTop="@dimen/criterionVerticalSpace"
                    android:layout_marginBottom="@dimen/criterionVerticalSpace"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/skull_fracture_switch"
                    app:layout_constraintBottom_toTopOf="@id/burn_switch"/>
            <Switch
                    android:text="@string/ustione"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/burn_switch"
                    android:theme="@style/AppSwitchStyle"
                    android:textAppearance="@style/NormalTextStyle"
                    android:layout_marginStart="@dimen/horizontalMargin"
                    android:layout_marginEnd="@dimen/horizontalMargin"
                    android:layout_marginTop="@dimen/criterionVerticalSpace"
                    android:layout_marginBottom="@dimen/criterionVerticalSpace"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/costal_volet_switch"
                    app:layout_constraintBottom_toTopOf="@id/unstable_pelvis_switch"/>
            <Switch
                    android:text="@string/bacino_instabile_deformato"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/unstable_pelvis_switch"
                    android:theme="@style/AppSwitchStyle"
                    android:textAppearance="@style/NormalTextStyle"
                    android:layout_marginStart="@dimen/horizontalMargin"
                    android:layout_marginEnd="@dimen/horizontalMargin"
                    android:layout_marginTop="@dimen/criterionVerticalSpace"
                    android:layout_marginBottom="@dimen/criterionVerticalSpace"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/burn_switch"
                    app:layout_constraintBottom_toTopOf="@id/lesione_vertebrale_switch"/>
            <Switch
                    android:text="@string/sospetta_lesione_verbale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/lesione_vertebrale_switch"
                    android:theme="@style/AppSwitchStyle"
                    android:textAppearance="@style/NormalTextStyle"
                    android:layout_marginStart="@dimen/horizontalMargin"
                    android:layout_marginEnd="@dimen/horizontalMargin"
                    android:layout_marginTop="@dimen/criterionVerticalSpace"
                    android:layout_marginBottom="@dimen/criterionVerticalSpace"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/unstable_pelvis_switch"
                    app:layout_constraintBottom_toTopOf="@id/amputation_flaying_switch"/>
            <Switch
                    android:text="@string/amputazione_scuoiamento_arto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/amputation_flaying_switch"
                    android:theme="@style/AppSwitchStyle"
                    android:textAppearance="@style/NormalTextStyle"
                    android:layout_marginStart="@dimen/horizontalMargin"
                    android:layout_marginEnd="@dimen/horizontalMargin"
                    android:layout_marginTop="@dimen/criterionVerticalSpace"
                    android:layout_marginBottom="@dimen/criterionVerticalSpace"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lesione_vertebrale_switch"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>