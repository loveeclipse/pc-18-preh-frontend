<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   style="@style/BackgroundFragmentStyle"
                                                   tools:context=".dialog.PatientStatusDialogFragment"
                                                   android:id="@+id/frameLayout4">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/horizontalMargin"
                android:layout_marginEnd="@dimen/horizontalMargin">
            <Button
                    android:text="@string/penetrante"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/penetrante_button"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    android:layout_marginStart="@dimen/horizontalMargin"
                    app:layout_constraintTop_toBottomOf="@+id/textView32"
                    app:layout_constraintBottom_toTopOf="@+id/casco_cintura_switch"
                    app:layout_constraintStart_toEndOf="@+id/chiuso_button"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <Button
                    android:text="@string/tetraparesi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tetraparesi_button"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    android:layout_marginStart="@dimen/horizontalMargin"
                    android:layout_marginEnd="@dimen/horizontalMargin"
                    app:layout_constraintTop_toBottomOf="@+id/infossata_button"
                    app:layout_constraintBottom_toTopOf="@id/constraintLayout11"
                    app:layout_constraintStart_toEndOf="@+id/paraparesi_button"
                    app:layout_constraintEnd_toStartOf="@+id/parestesia_button"/>
            <Button
                    android:text="@string/paraparesi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/paraparesi_button"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    android:layout_marginEnd="@dimen/horizontalMargin"
                    app:layout_constraintTop_toBottomOf="@+id/infossata_button"
                    app:layout_constraintBottom_toTopOf="@id/constraintLayout11"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tetraparesi_button"/>
            <androidx.constraintlayout.widget.Guideline
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_percent="0.7"
                    android:id="@+id/guideline63"/>
            <Button
                    android:text="@string/parestesia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/parestesia_button"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    android:layout_marginStart="@dimen/horizontalMargin"
                    app:layout_constraintTop_toBottomOf="@+id/otorragia_button"
                    app:layout_constraintBottom_toTopOf="@id/constraintLayout11"
                    app:layout_constraintStart_toEndOf="@id/tetraparesi_button"
                    app:layout_constraintEnd_toEndOf="parent"/>/>
            <Button
                    android:text="@string/negativo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/negativo_button"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    android:layout_marginStart="@dimen/horizontalMargin"
                    app:layout_constraintTop_toBottomOf="@+id/volet_button"
                    app:layout_constraintBottom_toTopOf="@id/bacino_instabile_button"
                    app:layout_constraintStart_toEndOf="@+id/positivo_button"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <Button
                    android:text="@string/bacino_instabile_deformato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bacino_instabile_button"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    app:layout_constraintTop_toBottomOf="@+id/positivo_button"
                    app:layout_constraintBottom_toTopOf="@id/amputazione_button"/>
            <Button
                    android:text="@string/amputazione_subamputazione"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/amputazione_button"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    app:layout_constraintTop_toBottomOf="@+id/bacino_instabile_button"
                    app:layout_constraintBottom_toTopOf="@id/infossata_button"/>
            <Switch
                    android:text="@string/casco_cintura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/casco_cintura_switch"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    app:layout_constraintTop_toBottomOf="@+id/chiuso_button"
                    app:layout_constraintBottom_toTopOf="@id/emorragia_esterna_button"/>
            <Button
                    android:text="@string/otorragia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/otorragia_button"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    android:layout_marginStart="@dimen/horizontalMargin"
                    app:layout_constraintTop_toBottomOf="@+id/amputazione_button"
                    app:layout_constraintBottom_toTopOf="@id/tetraparesi_button"
                    app:layout_constraintStart_toEndOf="@+id/infossata_button"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <Button
                    android:text="@string/volet_costale_deformit_torace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/volet_button"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    app:layout_constraintTop_toBottomOf="@+id/tachipnea_button"
                    app:layout_constraintBottom_toTopOf="@id/positivo_button"/>
            <Button
                    android:text="@string/tachipnea_dispnea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tachipnea_button"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    app:layout_constraintTop_toBottomOf="@+id/vie_aeree_switch"
                    app:layout_constraintBottom_toTopOf="@id/volet_button"/>
            <Button
                    android:text="@string/emorragia_esterna_in_atto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/emorragia_esterna_button"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    app:layout_constraintTop_toBottomOf="@+id/casco_cintura_switch"
                    app:layout_constraintBottom_toTopOf="@id/vie_aeree_switch"/>
            <Button
                    android:text="@string/chiuso"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chiuso_button"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    android:layout_marginEnd="@dimen/horizontalMargin"
                    app:layout_constraintTop_toBottomOf="@+id/textView32"
                    app:layout_constraintBottom_toTopOf="@+id/casco_cintura_switch"
                    app:layout_constraintStart_toEndOf="@+id/guideline62"
                    app:layout_constraintEnd_toStartOf="@+id/penetrante_button"/>
            <androidx.constraintlayout.widget.Guideline
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_percent="0.3"
                    android:id="@+id/guideline62"/>
            <Button
                    android:text="@string/positivo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/positivo_button"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    android:layout_marginEnd="@dimen/horizontalMargin"
                    app:layout_constraintTop_toBottomOf="@+id/volet_button"
                    app:layout_constraintBottom_toTopOf="@id/bacino_instabile_button"
                    app:layout_constraintStart_toEndOf="@+id/guideline62"
                    app:layout_constraintEnd_toStartOf="@+id/negativo_button"/>
            <Switch
                    android:text="@string/vie_aeree_non_pervie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/vie_aeree_switch"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    app:layout_constraintTop_toBottomOf="@+id/emorragia_esterna_button"
                    app:layout_constraintBottom_toTopOf="@id/tachipnea_button"/>
            <Button
                    android:text="@string/infossata"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/infossata_button"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    android:layout_marginEnd="@dimen/horizontalMargin"
                    app:layout_constraintTop_toBottomOf="@+id/amputazione_button"
                    app:layout_constraintBottom_toTopOf="@id/tetraparesi_button"
                    app:layout_constraintStart_toEndOf="@+id/guideline62"
                    app:layout_constraintEnd_toStartOf="@+id/otorragia_button"/>
            <TextView
                    android:text="@string/shock_index_o_shock_index_pedriatic_age_adjusted"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView30"
                    style="@style/BigTextStyle"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout11"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/guideline62"
                    app:layout_constraintEnd_toStartOf="@+id/guideline63"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/box"
                    android:id="@+id/constraintLayout11"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    app:layout_constraintTop_toBottomOf="@+id/tetraparesi_button"
                    app:layout_constraintBottom_toTopOf="@id/textView30">

                <Button
                        android:text="@string/criterio_anatomico"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/anatomico_button"
                        android:layout_marginTop="@dimen/verticalMargin"
                        android:layout_marginBottom="@dimen/verticalMargin"
                        app:layout_constraintWidth_percent="0.65"
                        app:layout_constraintTop_toBottomOf="@+id/fisiologico_button"
                        app:layout_constraintBottom_toTopOf="@id/dinamico_button"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                <Button
                        android:text="@string/criterio_dinamico"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/dinamico_button"
                        android:layout_marginTop="@dimen/verticalMargin"
                        android:layout_marginBottom="@dimen/verticalMargin"
                        app:layout_constraintWidth_percent="0.65"
                        app:layout_constraintTop_toBottomOf="@+id/anatomico_button"
                        app:layout_constraintBottom_toTopOf="@id/giudizio_clinico_button"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                <Button
                        android:text="@string/giudizio_clinico"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/giudizio_clinico_button"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="@dimen/verticalMargin"
                        app:layout_constraintWidth_percent="0.65"
                        app:layout_constraintTop_toBottomOf="@+id/dinamico_button"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                <Button
                        android:text="@string/criterio_fisiologico"
                        android:layout_width="0dp"
                        android:layout_height="51dp"
                        android:id="@+id/fisiologico_button"
                        android:layout_marginTop="@dimen/verticalMargin"
                        android:layout_marginBottom="@dimen/verticalMargin"
                        app:layout_constraintWidth_percent="0.65"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/anatomico_button"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintVertical_chainStyle="spread_inside"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/shock_index_text"
                    style="@style/BigTextStyle"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    android:layout_marginStart="@dimen/horizontalMargin"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout11"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/guideline63"/>
            <TextView
                    android:text="@string/stato_paziente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/DialogTitleTextStyle"
                    android:id="@+id/textView32"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:text="@string/ecofast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView35"
                    style="@style/NormalTextStyle"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    app:layout_constraintTop_toBottomOf="@+id/volet_button"
                    app:layout_constraintBottom_toTopOf="@id/bacino_instabile_button"
                    app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:text="@string/frattura_cranica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView36"
                    style="@style/NormalTextStyle"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    app:layout_constraintTop_toBottomOf="@+id/amputazione_button"
                    app:layout_constraintBottom_toTopOf="@id/paraparesi_button"
                    app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:text="@string/tipo_trauma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView37"
                    style="@style/NormalTextStyle"
                    android:layout_marginTop="@dimen/verticalMargin"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    app:layout_constraintTop_toBottomOf="@+id/textView32"
                    app:layout_constraintBottom_toTopOf="@+id/casco_cintura_switch"
                    app:layout_constraintStart_toStartOf="parent"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/patient_image_button"
                    android:src="@drawable/ic_close_24dp"
                    android:backgroundTint="@color/common_google_signin_btn_tint"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>